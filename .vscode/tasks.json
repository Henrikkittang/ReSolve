{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "initialize: Debug",
            "type": "shell",
            "command": "cmake -B build/debug -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_COMPILER=clang++",
            "group": "build"
        },        
        {
            "label": "Build: Debug",
            "type": "shell",
            "command": "cmake --build build/debug --config Debug -j8",
            "group": "build"
        },
        {
            "label": "Run: Debug",
            "type": "shell",
            "command": "./build/debug/bin/resolve",
            "group": "build"
        },
        {
            "label": "Build & Run: Debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build: Debug",
                "Run: Debug"
            ],
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Clear: Debug",
            "type": "shell",
            "command": "Remove-Item -Path './build/debug/*' -Recurse",            
            "group": "build"
        },


        {
            "label": "initialize: Release",
            "type": "shell",
            "command": "cmake  -B build/release -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_COMPILER=clang++",
            "group": "build"
        },
        {
            "label": "Build: Release",
            "type": "shell",
            "command": "cmake --build build/release --config Release -j8",
            "group": "build"
        },
        {
            "label": "Run: Release",
            "command": "./build/release/bin/resolve",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Build & Run: Release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build: Release",
                "Run: Release"
            ],
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Clear: Release",
            "type": "shell",
            "command": "Remove-Item -Path './build/release/*' -Recurse",            
            "group": "build"
        },



        {
            "label": "initialize: All",
            "dependsOrder": "parallel",
            "dependsOn": [
                "initialize: Debug",
                "initialize: Release"
            ],
            "type": "shell",
            "group": "build"
        },
        {
            "label": "Clear: All",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Clear: Debug",
                "Clear: Release"
            ],
            "type": "shell",
            "group": "build"
        },
       
    ]
}